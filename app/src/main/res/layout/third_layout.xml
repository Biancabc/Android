<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/aqua"
    tools:context=".ThirdLayout">

    <TextView
        android:id="@+id/color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="300dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/second_bnv"
        app:layout_constraintRight_toRightOf="@+id/second_bnv"
        app:layout_constraintTop_toBottomOf="@+id/second_bnv" />

    <Button
        android:id="@+id/colors"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Choose your color"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@+id/second_bnv"
        app:layout_constraintRight_toRightOf="@+id/second_bnv"
        app:layout_constraintTop_toBottomOf="@+id/second_bnv" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/second_bnv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="8dp"
        android:background="@color/aqua100"
        app:menu="@menu/second_nav_menu"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>